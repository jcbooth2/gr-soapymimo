dev1<?xml version="1.0"?>
<block>
  <name>Soapy MIMO Basic Source</name>
  <key>soapymimo_basicsource</key>
  <category>[soapymimo]</category>
  <import>import soapymimo</import>
  <make>\
    soapymimo.basicsource($nchan, $dev1, $dev2, $args, $samp_rate, "$type")

    <!-- Set clock rate and clock source if available -->
    #if $clock_rate()
  self.$(id).set_master_clock_rate($clock_rate)
    #end if
    #if $clock_source()
  self.$(id).set_clock_source($clock_source)
    #end if

    #set $center_freq_array = [$center_freq0, $center_freq1]
    #set $nco_freq_array = [$nco_freq0, $nco_freq1]
    #set $overall_gain_array = [$overall_gain0, $overall_gain1]
    #set $pga_gain_array = [$pga_gain0, $pga_gain1]
    #set $lna_gain_array = [$lna_gain0, $lna_gain1]
    #set $tia_gain_array = [$tia_gain0, $tia_gain1]
    #set $mix_gain_array = [$mix_gain0, $mix_gain1]
    #set $vga_gain_array = [$vga_gain0, $vga_gain1]
    #set $tuner_gain_array = [$tuner_gain0, $tuner_gain1]
    #set $amp_gain_array = [$amp_gain0]
    #set $gain_auto_array = [$gain_auto_mode0, $gain_auto_mode1]
    #set $antenna_array = [$ant0, $ant1]
    #set $bandwidth_array = [$bw0, $bw1]

    #for $i in range(0, $nchan())
  self.$(id).set_frequency($i, $center_freq_array[$i])
    #if not $fine_tune_array[$i]()
  self.$(id).set_gain($i, $overall_gain_array[$i])
    #end if
    #if $dev1().split(',')[0] == 'driver=uhd' or $dev1().split(',')[0] == 'driver=plutosdr' or $dev1().split(',')[0] == 'driver=lime' and $fine_tune_array[$i]()
  #self.$(id).set_gain($i, 'PGA', $pga_gain_array[$i])
    #end if
    #if $dev1().split(',')[0] == 'driver=lime' and $fine_tune_array[$i]()
  self.$(id).set_gain($i, 'LNA', $lna_gain_array[$i])
  self.$(id).set_gain($i, 'TIA', $tia_gain_array[$i])
    #end if
    #if $dev1().split(',')[0] == 'driver=lime'
  self.$(id).set_frequency($i, "BB", $nco_freq_array[$i])
    #end if
    #if $dev1().split(',')[0] == 'driver=airspy' and $fine_tune_array[$i]()
  self.$(id).set_gain($i, 'LNA', $lna_gain_array[$i])
  self.$(id).set_gain($i, 'MIX', $mix_gain_array[$i])
  self.$(id).set_gain($i, 'VGA', $vga_gain_array[$i])
    #end if
    #if $dev1().split(',')[0] == 'driver=rtlsdr' and $fine_tune_array[$i]()
  self.$(id).set_gain($i, 'TUNER', $tuner_gain_array[$i])
    #end if
    #if $dev1().split(',')[0] == 'driver=harckrf' and $fine_tune_array[$i]()
  self.$(id).set_gain($i, 'LNA', $lna_gain_array[$i])
  self.$(id).set_gain($i, 'AMP', $amp_gain_array[$i])
  self.$(id).set_gain($i, 'VGA', $vga_gain_array[$i])
    #end if
  self.$(id).set_gain_mode($i, $gain_auto_array[$i])
    #if $antenna_array[$i]() != ''
  self.$(id).set_antenna($i, $antenna_array[$i])
    #end if
    #if $bandwidth_array[$i]()
  self.$(id).set_bandwidth($i, $bandwidth_array[$i])
    #end if
    #end for
  </make>

  <callback>set_frequency(0, $center_freq0)</callback>
  <!-- NCO frequency Channel 0 callback -->
  <callback>
    #if ($dev1().split(',')[0] == 'driver=lime')
  self.$(id).set_frequency(0, "BB", $nco_freq0)
    #end if
  </callback>
  <!-- Overall gain Channel 0 callback -->
  <callback>
    #if (($dev1().split(',')[0]) != 'driver=uhd' and ($dev1().split(',')[0]) != 'driver=plutosdr' and $dev1().split(',')[0] != 'driver=lime') or not $fine_tune0()
  self.$(id).set_gain(0, $overall_gain0)
    #end if
  </callback>
  <!-- PGA gain Channel 0 callback -->
   <callback>
    #if (($dev1().split(',')[0]) == 'driver=uhd' or ($dev1().split(',')[0]) == 'driver=plutosdr' or ($dev1().split(',')[0]) == 'driver=lime') and $fine_tune0()
  self.$(id).set_gain(0,'PGA', $pga_gain0)
    #end if
  </callback>
  <!-- LNA gain Channel 0 callback -->
   <callback>
    #if ($dev1().split(',')[0] == 'driver=lime' or $dev1().split(',')[0] == 'driver=hackrf') and $fine_tune0()
  self.$(id).set_gain(0, 'LNA', $lna_gain0)
    #end if
  </callback>
  <!-- TIA gain Channel 0 callback -->
   <callback>
    #if ($dev1().split(',')[0] == 'driver=lime') and $fine_tune0()
  self.$(id).set_gain(0, 'TIA', $tia_gain0)
    #end if
  </callback>
  <!-- Mix gain Channel 0 callback -->
  <callback>
    #if ($dev1().split(',')[0] == 'driver=airspy') and $fine_tune0()
  self.$(id).set_gain(0, 'MIX', $mix_gain0)
    #end if
  </callback>
  <!-- VGA gain Channel 0 callback -->
  <callback>
    #if ($dev1().split(',')[0] == 'driver=airspy' or $dev1().split(',')[0] == 'driver=hackrf') and $fine_tune0()
  self.$(id).set_gain(0, 'VGA', $vga_gain0)
    #end if
  </callback>
  <!-- TUNER gain Channel 0 callback -->
  <callback>
    #if ($dev1().split(',')[0] == 'driver=rtlsdr') and $fine_tune0()
  self.$(id).set_gain(0, 'TUNER', $tuner_gain0)
    #end if
  </callback>
  <!-- AMP gain Channel 0 callback -->
  <callback>
    #if ($dev1().split(',')[0] == 'driver=hackrf') and $fine_tune0()
  self.$(id).set_gain(0, 'AMP', $amp_gain0)
    #end if
  </callback>
  <callback>set_antenna(0,$ant0)</callback>
  <callback>set_bandwidth(0,$bw0)</callback>

  <callback>set_frequency(1, $center_freq1)</callback>
  <!-- Overall gain Channel 1 callback -->
  <callback>
    #if (($dev1().split(',')[0]) != 'driver=uhd' and ($dev1().split(',')[0]) != 'driver=plutosdr' and $dev1().split(',')[0] != 'driver=lime') or not $fine_tune1()
  self.$(id).set_gain(1, $overall_gain1)
    #end if
  </callback>
  <!-- PGA gain Channel 1 callback -->
  <callback>
    #if (($dev1().split(',')[0]) == 'driver=uhd') and $fine_tune1()
  self.$(id).set_gain(1,'PGA', $pga_gain1)
    #end if
  </callback>
  <callback>set_antenna(1,$ant1)</callback>
  <callback>set_bandwidth(1,$bw1)</callback>

  <param>
   <name>Device1</name>
   <key>dev1</key>
   <type>string</type>
  </param>

  <param>
    <name>Device2</name>
    <key>dev2</key>
    <type>string</type>
  </param>

  <param>
   <name>Args</name>
   <key>args</key>
   <type>string</type>
  </param>

  <param>
   <name>Sampling Rate</name>
   <key>samp_rate</key>
   <type>float</type>
  </param>

  <param>
   <name>Num Channels</name>
   <key>nchan</key>
   <value>1</value>
   <type>int</type>
   <hide>part</hide>
  </param>

  <param>
   <name>Master Clock Rate</name>
   <key>clock_rate</key>
   <value>0</value>
   <type>real</type>
   <hide>part</hide>
  </param>

  <param>
   <name>Clock Source</name>
   <key>clock_source</key>
   <type>string</type>
   <hide>part</hide>
  </param>

  <param>
   <name>Output Type</name>
   <key>type</key>
   <type>enum</type>
   <option>
    <name>Complex float32</name>
    <key>fc32</key>
    <opt>type:fc32</opt>
   </option>
   <option>
    <name>int16</name>
    <key>s16</key>
    <opt>type:s16</opt>
   </option>
  </param>
  <!-- Channel 0 params -->

  <param>
   <name>Ch0: Center Freq (Hz)</name>
   <key>center_freq0</key>
   <value>0</value>
   <type>real</type>
   <hide>#if $nchan() > 0 then 'none' else 'all'#</hide>
   <tab>RF Options</tab>
  </param>

   <param>
     <name>Ch0: NCO Freq (Hz)</name>
     <key>nco_freq0</key>
     <value>0</value>
     <type>real</type>
     <hide>
       #if (($dev1().split(',')[0]) == 'driver=uhd' or ($dev1().split(',')[0]) == 'driver=plutosdr' or ($dev1().split(',')[0]) == 'driver=airspy' or ($dev1().split(',')[0]) == 'driver=rtlsdr')
         all
       #else
         part
       #end if
     </hide>
     <tab>RF Options</tab>
   </param>

   <param>
     <name>Ch0: Gain Mode</name>
     <key>fine_tune0</key>
     <value>False</value>
     <type>bool</type>
     <hide>part</hide>
     <option>
       <name>Auto</name>
       <key>False</key>
     </option>
     <option>
       <name>Manual</name>
       <key>True</key>
     </option>
     <tab>RF Options</tab>
   </param>

  <!-- Overall Gain Channel 0 -->
  <param>
   <name>Ch0: Gain Value</name>
   <key>overall_gain0</key>
   <value>0</value>
   <type>real</type>
   <hide>
     #if (($dev1().split(',')[0]) == 'driver=uhd' or ($dev1().split(',')[0]) == 'driver=plutosdr' or ($dev1().split(',')[0]) == 'driver=lime' or ($dev1().split(',')[0]) == 'driver=airspy' or ($dev1().split(',')[0]) == 'driver=rtlsdr') and $fine_tune0()
       all
     #else if (($dev1().split(',')[0]) == 'driver=plutosdr' or ($dev1().split(',')[0]) == 'driver=airspy') and $gain_auto_mode0()
       all
     #end if
   </hide>
   <tab>RF Options</tab>
  </param>

  <!-- PGA Gain Channel 0 -->
  <param>
   <name>Ch0: PGA Gain Value</name>
   <key>pga_gain0</key>
   <value>0</value>
   <type>float</type>
   <hide>
     #if ($dev1().split(',')[0]) == 'driver=plutosdr' and $gain_auto_mode0()
       all
     #else if (($dev1().split(',')[0]) == 'driver=uhd' or ($dev1().split(',')[0]) == 'driver=plutosdr' or ($dev1().split(',')[0]) == 'driver=lime') and $fine_tune0()
       none
     #else
       all
     #end if
   </hide>
   <tab>RF Options</tab>
  </param>

  <!-- LNA Gain Channel 0 -->
  <param>
   <name>Ch0: LNA Gain Value</name>
   <key>lna_gain0</key>
   <value>0</value>
   <type>float</type>
   <hide>
    #if (($dev1().split(',')[0]) == 'driver=airspy') and $gain_auto_mode0()
     all
    #else if (($dev1().split(',')[0]) == 'driver=lime' or ($dev1().split(',')[0]) == 'driver=airspy') and $fine_tune0()
     none
    #else
     all
    #end if
   </hide>
   <tab>RF Options</tab>
  </param>

  <!-- TIA Gain Channel 0 -->
  <param>
   <name>Ch0: TIA Gain Value</name>
   <key>tia_gain0</key>
   <value>0</value>
   <type>float</type>
   <hide>
    #if ($dev1().split(',')[0]) == 'driver=lime' and $fine_tune0()
     none
    #else
     all
    #end if
   </hide>
   <tab>RF Options</tab>
  </param>

  <!-- MIX Gain Channel 0 -->
  <param>
   <name>Ch0: MIX Gain Value</name>
   <key>mix_gain0</key>
   <value>0</value>
   <type>float</type>
   <hide>
    #if (($dev1().split(',')[0]) == 'driver=airspy') and $gain_auto_mode0()
     all
    #else if ($dev1().split(',')[0]) == 'driver=airspy' and $fine_tune0()
     none
    #else
     all
    #end if
   </hide>
   <tab>RF Options</tab>
  </param>

  <!-- VGA Gain Channel 0 -->
  <param>
   <name>Ch0: VGA Gain Value</name>
   <key>vga_gain0</key>
   <value>0</value>
   <type>float</type>
   <hide>
     #if (($dev1().split(',')[0]) == 'driver=airspy') and $gain_auto_mode0()
       all
     #else if ($dev1().split(',')[0]) == 'driver=airspy' and $fine_tune0()
       none
     #else
       all
    #end if
   </hide>
   <tab>RF Options</tab>
  </param>

   <!-- TUNER Gain Channel 0 -->
  <param>
   <name>Ch0: TUNER Gain Value</name>
   <key>tuner_gain0</key>
   <value>0</value>
   <type>float</type>
   <hide>
    #if ($dev1().split(',')[0]) == 'driver=rtlsdr' and $fine_tune0()
      none
    #else
      all
    #end if
   </hide>
   <tab>RF Options</tab>
  </param>

   <!-- TUNER Gain Channel 0 -->
  <param>
   <name>Ch0: AMP Gain Value</name>
   <key>amp_gain0</key>
   <value>0</value>
   <type>float</type>
   <hide>
    #if ($dev1().split(',')[0]) == 'driver=hackrf' and $fine_tune0()
      none
    #else
      all
    #end if
   </hide>
   <tab>RF Options</tab>
  </param>

  <param>
   <name>Ch0: Automatic Gain</name>
   <key>gain_auto_mode0</key>
   <value>False</value>
   <type>bool</type>
   <hide>
   #if (($dev1().split(',')[0]) == 'driver=airspy' or ($dev1().split(',')[0]) == 'driver=plutosdr') and $gain_auto_mode0()
     none
   #else if ($dev1().split(',')[0]) == 'driver=uhd' or ($dev1().split(',')[0]) == 'driver=lime' or ($dev1().split(',')[0]) == 'driver=rtlsdr'
     all
   #else
     part
   #end if
   </hide>
   <option>
     <name>False</name>
     <key>False</key>
   </option>
   <option>
     <name>True</name>
     <key>True</key>
   </option>
   <tab>RF Options</tab>
  </param>

  <param>
   <name>Ch0: Antenna</name>
   <key>ant0</key>
   <value></value>
   <type>string</type>
   <hide>#if $nchan() > 0 then 'part' else 'all'#</hide>
   <tab>RF Options</tab>
  </param>

  <param>
   <name>Ch0: Bandwidth (Hz)</name>
   <key>bw0</key>
   <value>0</value>
   <type>real</type>
   <hide>#if $nchan() > 0 then then 'part' else 'all'#</hide>
   <tab>RF Options</tab>
  </param>

  <!-- Channel 1 params -->
  <param>
   <name>Ch1: Center Freq (Hz)</name>
   <key>center_freq1</key>
   <value>0</value>
   <type>real</type>
   <hide>#if $nchan() > 1 then 'none' else 'all'#</hide>
   <tab>RF Options</tab>
  </param>

    <param>
     <name>Ch1: NCO Freq (Hz)</name>
     <key>nco_freq1</key>
     <value>0</value>
     <type>real</type>
     <hide>
         all
     </hide>
     <tab>RF Options</tab>
   </param>

    <param>
     <name>Ch1: Gain Mode</name>
     <key>fine_tune1</key>
     <value>False</value>
     <type>bool</type>
     <hide>
       #if $nchan() &lt; 2
         all
       #else
         part
       #end if
     </hide>
     <option>
       <name>Auto</name>
       <key>False</key>
     </option>
     <option>
       <name>Manual</name>
       <key>True</key>
     </option>
     <tab>RF Options</tab>
   </param>

  <!-- Overall Gain Channel 1 -->
  <param>
   <name>Ch1: Gain Value</name>
   <key>overall_gain1</key>
   <value>0</value>
   <type>real</type>
   <hide>
     #if ((($dev1().split(',')[0]) == 'driver=uhd' or ($dev1().split(',')[0]) == 'driver=plutosdr' or ($dev1().split(',')[0]) == 'driver=lime' or ($dev1().split(',')[0]) == 'driver=airspy' or ($dev1().split(',')[0]) == 'driver=rtlsdr') and $fine_tune1()) or $nchan() &lt; 2
       all
     #end if
   </hide>
  <tab>RF Options</tab>
  </param>

  <!-- PGA Gain Channel 1 -->
  <param>
   <name>Ch1: PGA Gain Value</name>
   <key>pga_gain1</key>
   <value>0</value>
   <type>float</type>
   <hide>
    #if (($dev1().split(',')[0]) == 'driver=uhd') and $nchan() >1 and $fine_tune1()
     none
    #else
     all
    #end if
   </hide>
   <tab>RF Options</tab>
  </param>

  <!-- LNA Gain Channel 1 -->
  <param>
   <name>Ch1: LNA Gain Value</name>
   <key>lna_gain1</key>
   <value>0</value>
   <type>float</type>
   <hide>
   all
   </hide>
   <tab>RF Options</tab>
  </param>

  <!-- TIA Gain Channel 1 -->
  <param>
   <name>Ch1: IAMP Gain Value</name>
   <key>tia_gain1</key>
   <value>0</value>
   <type>float</type>
   <hide>
   all
   </hide>
   <tab>RF Options</tab>
  </param>

   <!-- MIX Gain Channel 1 -->
  <param>
   <name>Ch1: MIX Gain Value</name>
   <key>mix_gain1</key>
   <value>0</value>
   <type>float</type>
   <hide>
   all
   </hide>
   <tab>RF Options</tab>
  </param>

  <!-- VGA Gain Channel 1 -->
  <param>
   <name>Ch1: VGA Gain Value</name>
   <key>vga_gain1</key>
   <value>0</value>
   <type>float</type>
   <hide>
   all
   </hide>
   <tab>RF Options</tab>
  </param>

   <!-- TUNER Gain Channel 1 -->
  <param>
   <name>Ch1: TUNER Gain Value</name>
   <key>tuner_gain1</key>
   <value>0</value>
   <type>float</type>
   <hide>
   all
   </hide>
   <tab>RF Options</tab>
  </param>

  <param>
   <name>Ch1: Automatic Gain</name>
   <key>gain_auto_mode1</key>
   <value>False</value>
   <type>bool</type>
   <hide>
   #if $nchan() &lt;= 1
     all
   #else if ($dev1().split(',')[0]) == 'driver=uhd' or ($dev1().split(',')[0]) == 'driver=lime' or ($dev1().split(',')[0]) == 'driver=plutosdr' or ($dev1().split(',')[0]) == 'driver=airspy' or ($dev1().split(',')[0]) == 'driver=rtlsdr'
     all
   #else
     part
   #end if  </hide>
   <tab>RF Options</tab>
  </param>

  <param>
   <name>Ch1: Antenna</name>
   <key>ant1</key>
   <value></value>
   <type>string</type>
   <hide>#if $nchan() > 1 then 'part' else 'all'#</hide>
   <tab>RF Options</tab>
  </param>

  <param>
   <name>Ch1: Bandwidth (Hz)</name>
   <key>bw1</key>
   <value>0</value>
   <type>real</type>
   <hide>#if $nchan() > 1 then 'part' else 'all'#</hide>
   <tab>RF Options</tab>
  </param>

  <!-- Check number of channels -->
  <check>\
   #if ($dev1().split(',')[0]) == 'driver=uhd'
   2 >= $nchan\
   #else if ($dev1().split(',')[0]) == 'driver=plutosdr' or ($dev1().split(',')[0]) == 'driver=lime' or ($dev1().split(',')[0]) == 'driver=airspy' or ($dev1().split(',')[0]) == 'driver=rtlsdr' or ($dev1().split(',')[0]) == 'driver=hackrf'
   1 == $nchan\
   #else
   2 >= $nchan\
   #end if
  </check>

  <!-- Check PGA gain for Channel 0 -->
  <check>\
   #if ($dev1().split(',')[0]) == 'driver=uhd'
   76 >= $pga_gain0 >= 0\
   #else if ($dev1().split(',')[0]) == 'driver=plutosdr'
   73 >= $pga_gain0 >= 0\
   #else if ($dev1().split(',')[0]) == 'driver=lime'
   19 >= $pga_gain0 >= -12\
   #else
   0 == 0\
   #end if
  </check>

  <!-- Check LNA gain for Channel 0 -->
  <check>\
   #if ($dev1().split(',')[0]) == 'driver=lime'
   30 >= $lna_gain0 >= 0\
   #else if ($dev1().split(',')[0]) == 'driver=airspy'
   15 >= $lna_gain0 >= 0\
   #else if ($dev1().split(',')[0]) == 'driver=hackrf'
   40 >= $lna_gain0 >= 0\
   #else
   0 == 0\
   #end if
  </check>

  <!-- Check TIA gain for Channel 0 -->
  <check>\
   #if ($dev1().split(',')[0]) == 'driver=lime'
   12 >= $tia_gain0 >= 0\
   #else
   0 == 0\
   #end if
  </check>

   <!-- Check MIX gain for Channel 0 -->
  <check>\
   #if ($dev1().split(',')[0]) == 'driver=airspy'
   15 >= $mix_gain0 >= 0\
   #else
   0 == 0\
   #end if
  </check>

   <!-- Check VGA gain for Channel 0 -->
  <check>\
   #if ($dev1().split(',')[0]) == 'driver=airspy'
   15 >= $vga_gain0 >= 0\
   #else if ($dev1().split(',')[0]) == 'driver=hackrf'
   62 >= $vga_gain0 >= 0\
   #else
   0 == 0\
   #end if
  </check>

   <!-- Check TUNER gain for Channel 0 -->
  <check>\
   #if ($dev1().split(',')[0]) == 'driver=rtlsdr'
   49.6 >= $tuner_gain0 >= 0\
   #else
   0 == 0\
   #end if
  </check>

   <!-- Check AMP gain for Channel 0 -->
  <check>\
  #if ($dev1().split(',')[0]) == 'driver=hackrf'
  14 >= $amp_gain0 >= 0\
  #else
  0 == 0\
  #end if
  </check>
  <!-- Check PGA gain for Channel 1 -->
  <check>\
   #if ($dev1().split(',')[0]) == 'driver=uhd'
   89.75 >= $pga_gain1 >= 0\
   #else
   0 == 0\
   #end if
  </check>

  <!-- Check Positive number of Channels -->
  <check>\
   $nchan > 0\
